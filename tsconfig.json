{
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts",
  ],
  "compilerOptions": {
    "strict": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    
    "target": "ES2021",
    "module": "CommonJS",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "dist",
    "paths": {
      "@module/*": ["./src/*"]
    }
  },
  
  "typedocOptions": {
    "out": "doc",
    "disableSources": true,
    "excludePrivate": true,
    "readme": "none"
  },
}
